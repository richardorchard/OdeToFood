@page
@model OdeToFood.Pages.Restaurants.ListModel
@{
    ViewData["Title"] = "Restaurants";
}

<h1>Restaurants</h1>



<form method="get">
    <div class="form-group">
        <div class="input-group">
            <input type="search" asp-for="SearchTerm" class="form-control" />
            <span class="input-group-btn">

                <button class="btn btn-default">
                    <i class="glyphicon glyphicon-search" aria-hidden="true">Search</i>

                </button>
            </span>


        </div>



    </div>


</form>












@foreach (var restaurant in Model.Restaurants)
{

    <partial name="_Summary" model="restaurant" />

}




<a asp-page=".\Edit" class="btn btn-primary">Add New</a>

@section footer {

    <div>@Model.Message</div>



}
